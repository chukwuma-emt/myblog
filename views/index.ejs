<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Welcome | Blog by Chukwuma</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <!-- ‚úÖ Intro Section -->
    <div class="auther">
    <h1>Welcome to My Blog</h1>
    <p>Explore insightful articles, videos, and audio content on web development, tech trends, and personal experiences.</p>
   </div>

  <!-- ‚úÖ Latest Posts Section -->
  <section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <div class="articles-cards">
      <% data.forEach(post => { %>
        <div class="card">
          <a href="/post/<%= post.slug %>">

            <div class="media-box">
              <% if (post.mediaType === 'image') { %>
                <img src="/uploads/images/<%= post.mediaFile %>" alt="<%= post.title %>" loading="lazy">
              <% } else if (post.mediaType === 'video') { %>
                <video controls preload="none" poster="/uploads/thumbnails/<%= post.thumbnail %>">
                  <source src="/uploads/videos/<%= post.mediaFile %>" type="video/mp4">
                </video>
              <% } else if (post.mediaType === 'audio') { %>
                <audio controls preload="none">
                  <source src="/uploads/audio/<%= post.mediaFile %>" type="audio/mpeg">
                </audio>
              <% } else { %>
                <img src="/img/default-post.jpg" alt="default image" loading="lazy">
              <% } %>
            </div>

            <h2><%= post.title %></h2>
            <p class="article-list_date"><%= post.createdAt.toDateString() %></p>
            <div class="post-meta">
              <small>üëÅÔ∏è <%= post.views || 0 %> views</small>
              <small>‚ù§Ô∏è <%= post.likes || 0 %> likes</small>
            </div>

          </a>
        </div>
      <% }) %>
    </div>

    <!-- ‚úÖ Pagination -->
    <% if (nextPage !== null) { %>
      <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
  </section>

  <script src="/js/main.js"></script>
</body>
</html>
